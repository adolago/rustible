# Dockerfile for Application Server E2E Test Target
# Ubuntu-based container for testing application deployment scenarios
FROM ubuntu:24.04

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install base packages
RUN apt-get update && apt-get install -y \
    openssh-server \
    sudo \
    python3 \
    python3-pip \
    python3-venv \
    curl \
    wget \
    vim \
    git \
    netcat-openbsd \
    iproute2 \
    procps \
    unzip \
    tar \
    && rm -rf /var/lib/apt/lists/*

# Setup SSH
RUN mkdir -p /var/run/sshd \
    && ssh-keygen -A

# Create test user with sudo privileges
RUN useradd -m -s /bin/bash testuser \
    && echo "testuser:testpassword" | chpasswd \
    && echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Create application user
RUN useradd -m -s /bin/bash appuser \
    && echo "appuser:apppassword" | chpasswd

# Setup SSH for testuser
RUN mkdir -p /home/testuser/.ssh \
    && chmod 700 /home/testuser/.ssh \
    && chown -R testuser:testuser /home/testuser/.ssh

# Pre-create application directories
RUN mkdir -p /opt/apps \
    && mkdir -p /var/log/apps \
    && mkdir -p /etc/apps \
    && chown -R appuser:appuser /opt/apps /var/log/apps /etc/apps

# Expose SSH and application ports
EXPOSE 22 8080 8443 9000

COPY docker/entrypoint-appserver.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["/usr/sbin/sshd", "-D"]

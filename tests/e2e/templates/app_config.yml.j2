# Application Configuration
# Generated by Rustible E2E tests
# Server: {{ inventory_hostname }}

application:
  name: {{ app_name }}
  version: {{ app_version }}
  environment: {{ app_config.environment }}
  debug: {{ app_config.debug }}

server:
  host: 0.0.0.0
  port: 8080
  workers: 4
  timeout: 30

logging:
  level: {{ app_config.log_level }}
  format: json
  output:
    - file: {{ shared_dir }}/log/app.log
    - stdout

database:
  host: {{ app_config.database.host }}
  port: {{ app_config.database.port }}
  name: {{ app_config.database.name }}
  pool:
    min: 5
    max: 20
    timeout: 30

redis:
  host: {{ app_config.redis.host }}
  port: {{ app_config.redis.port }}
  db: 0
  pool_size: 10

features:
  rate_limiting: {{ app_config.features.rate_limiting }}
  caching: {{ app_config.features.caching }}
  metrics: {{ app_config.features.metrics }}

health_check:
  enabled: true
  path: /health
  interval: 30

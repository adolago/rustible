# Stanley Environment Configuration
# Generated by Rustible deployment

# Application Settings
STANLEY_ENV={{ environment }}
STANLEY_CONFIG_PATH={{ stanley_config_dir }}/stanley.yaml
PYTHONPATH={{ stanley_home }}/stanley

# Server Configuration
STANLEY_API_PORT={{ api_port }}
STANLEY_GUI_PORT={{ gui_port }}
STANLEY_WORKERS={{ stanley_workers }}

# Database Configuration
DATABASE_URL=postgresql://{{ postgres_user }}:{{ postgres_password }}@localhost:5432/{{ postgres_db }}
POSTGRES_DB={{ postgres_db }}
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}

# Redis Configuration
REDIS_URL=redis://{% if redis_password %}:{{ redis_password }}@{% endif %}localhost:6379/0
REDIS_PASSWORD={{ redis_password }}

# API Keys
OPENBB_API_KEY={{ openbb_api_key }}
SEC_IDENTITY={{ sec_identity }}

# Paths
STANLEY_HOME={{ stanley_home }}
STANLEY_DATA_DIR={{ stanley_data_dir }}
STANLEY_LOGS_DIR={{ stanley_logs_dir }}
STANLEY_CONFIG_DIR={{ stanley_config_dir }}

# Logging
STANLEY_LOG_LEVEL={{ stanley_log_level }}
STANLEY_LOG_FILE={{ stanley_logs_dir }}/stanley.log

# Security
STANLEY_SECRET_KEY={{ ansible_password | default('changeme-in-production') }}
STANLEY_API_KEY={{ lookup('password', '/dev/null length=32 chars=ascii_letters,digits') }}

# External Services
STANLEY_DOMAIN={{ stanley_domain | default('localhost') }}
STANLEY_SSL_ENABLED={{ stanley_ssl_enabled | lower }}

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Backup Configuration
BACKUP_ENABLED={{ stanley_backup_enabled | lower }}
BACKUP_S3_BUCKET={{ backup_s3_bucket | default('stanley-backups') }}
BACKUP_RETENTION_DAYS={{ backup_retention_days | default(30) }}